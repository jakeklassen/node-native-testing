{
  "name": "node-testing",
  "version": "1.0.0",
  "description": "",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "test": "node --test **/*.test.js",
    "test:tap": "node --test **/*.test.js | tap -",
    "test:ts": "node --loader tsx --test **/*.test.ts",
    "test:utap": "find lib -type f -name '*.test.js' -exec echo \\# utap-src:{} \\; -exec node {} \\; | utap"
  },
